{
  "name": "chadcommit",
  "displayName": "chadCommit",
  "description": "Suggests conventional commit message using GPT 3.5 turbo or GPT 4, by analyzing staged git files.",
  "version": "0.3.5",
  "activationEvents": [],
  "engines": {
    "vscode": "^1.76.0"
  },
  "author": {
    "name": "lennartle",
    "email": "lennartlence@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lennartle/chadcommit.git"
  },
  "publisher": "lennartlence",
  "pricing": "Free",
  "keywords": [
    "ai",
    "git",
    "diff",
    "action",
    "chatgpt",
    "conventional",
    "commit",
    "openai",
    "gpt 3.5",
    "gpt 4"
  ],
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "vscode.git"
  ],
  "icon": "resources/icon.png",
  "main": "out/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "chadCommit",
      "properties": {
        "chadcommit.openAiKey": {
          "type": "string",
          "default": "",
          "description": "(Required) API key to access the OpenAI"
        },
        "chadcommit.prompt": {
          "type": "string",
          "default": "Analyze a git diff and make a short conventional commit message, follow this template: üöÄfeat(scope) [message]\\nüõ†Ô∏èrefactor(scope) [message]\\n‚öôÔ∏èchore(scope) [message]; Response example: üöÄfeat(player) add captions\\nüõ†Ô∏èrefactor(player) support new formats\\n‚öôÔ∏èchore(dependencies) upgrade terser to 5.16.6",
          "description": "Edit this to fit your preferred form of the commit message, change it as you want"
        },
        "chadcommit.model": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4",
            "gpt-4-1106-preview",
            "gpt-3.5-turbo-0125"
          ],
          "description": "Choose preferred GPT model"
        }
      }
    },
    "commands": [
      {
        "category": "chadCommit",
        "command": "chadcommit.suggest",
        "title": "Suggest a commit message",
        "icon": {
          "light": "resources/cmd-icon-light.svg",
          "dark": "resources/cmd-icon-dark.svg"
        }
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "chadcommit.suggest",
          "group": "navigation",
          "when": "scmProvider == 'git'"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p . && terser out/extension.js -o out/extension.js -c -m",
    "watch": "tsc -watch -p .",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "@vscode/test-electron": "^2.2.3",
    "eslint": "^8.34.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "terser": "^5.16.6",
    "typescript": "^4.9.5"
  }
}